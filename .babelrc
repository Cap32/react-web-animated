{
	"presets": [
		"es2015",
		"stage-0",
		"react"
	],
	"plugins": [
		["module-resolver", {
			"root": [ "./src" ],
			"alias": {
				"React": "react"
			}
		}],
		"lodash",
		"add-module-exports",
		"transform-remove-strict-mode"
	],
	"env": {
		"legacy": {
			"plugins": [
				["import-rename", {
					"^react-dom/lib/(.*)$": "react/lib/$1"
				}]
			]
		}
	}
}
